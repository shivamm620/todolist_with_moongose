<%- include("header") -%>
  <div class="box" id="heading">
    <h1><%=kindDay%></h1>
  </div>
  <div class="box">
    <% newListItems.forEach(i=>{ %>
      <form action="/deleting" method="post">
      <div class="item">
      <input type="checkbox" name="checkedItem" value="<%=i._id%>" onChange="this.form.submit()">
      <input type="hidden" name="listname" value="<%=kindDay%>"></input>
      <p><%= i.name%></p>
    </div>
  </form>
    <% })%>
    <form class="item" action="/", method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value=<%=kindDay%> >+</button>
    </form>
  </div>
  <%- include("footer") -%>

